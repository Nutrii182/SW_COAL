
@{
    ViewBag.Title = "Agregar_Paciente";
}

<!doctype html>
<html>
<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/AgregarPaciente.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/Project/JS/jsAgregarPaciente.js"></script>
</head>
<body>
    <h3 class="text-left">Agregar Paciente</h3>
    <div class="container col-lg-12">
        <div class="row justify-content-center">
            <div class="form-group col-sm-4">
                <label>Nombre del Paciente</label>
                <div>
                    <input id="inNombre" type="text" placeholder="Nombre(s)" class="form-control required" />
                </div>
            </div>
            <div class="form-group col-sm-4">
                <label>Apellido Paterno</label>
                <div>
                    <input id="inPaterno" type="text" placeholder="Apellido Paterno" class="form-control required" />
                </div>
            </div>
            <div class="form-group col-sm-4">
                <label>Apellido Materno</label>
                <div>
                    <input id="inMaterno" type="text" placeholder="Apellido Materno" class="form-control required" />
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="form-group col-sm-4">
                <label>Domicilio</label>
                <div>
                    <input id="inDomicilio" type="text" placeholder="Domicilio" class="form-control required" />
                </div>
            </div>
            <div class="form-group col-sm-4">
                <label>Teléfono</label>
                <div>
                    <input id="inTelefono" type="tel" placeholder="Teléfono" class="form-control required" />
                </div>
            </div>
            <div class="form-group col-sm-4">
                <label>Celular</label>
                <div>
                    <input id="inCelular" type="tel" placeholder="Celular" class="form-control required" />
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="form-group col-sm-4">
                <label>Fecha de Nacimiento</label>
                <div>
                    <input id="inFechaNac" type="date" placeholder="Fecha: aaaa-mm-dd" class="form-control required" />
                </div>
            </div>
            <div class="form-group col-sm-4">
                <label>Sexo</label>
                <div>
                    <ul class="nav m-0">
                        <li class="form-inline">
                            <input id="inMasculino" name="sexo" type="radio" class="form-check" />
                            <label>Masculino</label>
                        </li>
                        <li style="margin-left:15px" class="form-inline">
                            <input id="inFemenino" name="sexo" type="radio" class="form-check" />
                            <label>Femenino</label>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="form-group col-sm-4">
                <input type="hidden"/>
            </div>
        </div>

    </div>
    <div>
        <button id="regPaci" class="btn btn-primary">Aceptar</button>
    </div>
    <sec>
        <input type="hidden" id="urlAgregaPaciente" value="@Url.Action("Agregar_Paciente","Home")" />
        <input type="hidden" id="urlPacientes" value="@Url.Action("RecibePaciente","Home")" />
        <input type="hidden" id="urlUsuarios" value="@Url.Action("ObtieneUsuarios","Home")" />
    </sec>
</body>
</html>