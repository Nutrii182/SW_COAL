@model IEnumerable<CapaModelo.Usuarios>


<!doctype html>
<html>
<head>
    <script src="~/Scripts/Project/JS/jsUsuario.js"></script>
</head>
<body>
    <br />
    <button id="AgUs" type="button" style="display:none" class="btn btn-light">
        @Html.ActionLink("Agregar Usuario", "Agregar_Usuario", "Home")
    </button>
    <br />
    <div class="form-inline">
        <input type="text" class="form-control pull-right" style="width:20%" id="search" placeholder="Buscar Usuario">
    </div>
    <br />
    <div class="row">
        <table id="tabUsu" class="table table-striped table-bordered table-hover table-responsive-lg">
            <thead>
                <tr>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Teléfono
                    </th>
                    <th>
                        Celular
                    </th>
                    <th>
                        Correo
                    </th>
                    <th>
                        Usuario
                    </th>
                    <th>
                        Tipo de Usuario
                    </th>
                    <th>Opciones</th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        @{
                            String nombreCompleto = item.nombre + ' ' + item.ap_paterno + ' ' + item.ap_materno;
                        }
                        <td>
                            @Html.DisplayFor(modelItem => nombreCompleto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.telefono)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.celular)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.correo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.usuario)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tipo)
                        </td>
                        <td>
                            <button title="Editar" type="button" class="btn btn-primary form-control ActUsu" data-target="@item.idusuario"><span><i class="far fa-edit"></i></span></button>
                            <button title="Detalles" type="button" class="btn btn-success form-control DetUsu" data-target="@item.idusuario"><span><i class="fas fa-info-circle"></i></span></button>
                            <button title="Eliminar" type="button" style="display: none" class="btn btn-danger form-control EliUsu" data-target="@item.idusuario"><span><i class="far fa-trash-alt"></i></span></button>
                        </td>
                    </tr>
                </tbody>
            }
        </table>
    </div>
    <input type="hidden" id="urlUsuarios" value="@Url.Action("Usuarios","Home")" />
    <input type="hidden" id="urlDetUsu" value="@Url.Action("DetallesUsuario","Home")" />
    <input type="hidden" id="urlModiUsu" value="@Url.Action("ModificaUsuario","Home")" />
    <input type="hidden" id="urlEliUsu" value="@Url.Action("EliminaUsuario","Home")" />
</body>
</html>