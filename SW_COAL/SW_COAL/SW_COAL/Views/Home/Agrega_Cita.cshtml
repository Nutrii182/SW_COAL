
@{
    ViewBag.Title = "Citas";
}

<!doctype html>
<html>
<head>
    <script src="https://www.gstatic.com/firebasejs/7.2.3/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/7.2.3/firebase-firestore.js"></script>
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/Project/JS/jsAgregarCita.js"></script>
</head>
<body>
    <h2 class="text-left">Agregar Cita</h2>
    <div class="container col-lg-12">
        <div class="row justify-content-center">
            <div class="form-group col-sm-4">
                <label>Nombre</label>
                <div>
                    <input id="nombre" type="text" placeholder="Nombre" class="form-control" required />
                </div>
            </div>
            <div class="form-group col-sm-4">
                <label>Motivo</label>
                <div>
                    <input id="motivo" type="text" placeholder="Motivo" class="form-control" required />
                </div>
            </div>
            <div class="form-group col-sm-4">
                <label>Fecha</label>
                <div>
                    <input id="fecha" type="date" placeholder="Fecha de la Cita" class="form-control" required />
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="form-group col-sm-4">
                <label>Hora</label>
                <div>
                    <input id="hora" type="time" placeholder="Hora" class="form-control" required />
                </div>
            </div>
            <div class="form-group col-sm-4">
                <label>Usuario</label>
                <div>
                    <input id="usuario" type="text" placeholder="Usuario" class="form-control" required />
                </div>
            </div>
            <div class="form-group col-sm-4">
                <div>
                    <input type="hidden" class="form-control" />
                </div>
            </div>
        </div>
        <br />
        <button id="AcepCita" class="btn btn-primary">Aceptar</button>
    </div>
    <input type="hidden" id="urlAgregaCita" value="@Url.Action("Agrega_Cita","Home")" />
</body>
</html>