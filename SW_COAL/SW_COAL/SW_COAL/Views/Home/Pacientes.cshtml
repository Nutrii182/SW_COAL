@model IEnumerable<CapaModelo.Pacientes>

<!doctype html>
<html>
<head>

    @*<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet"/>*@
    @*<link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap.min.css" rel="stylesheet" />*@
    @*<link href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.bootstrap.min.css" rel="stylesheet"/>*@

    @*<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" />*@
    @*<link href="https://cdn.datatables.net/responsive/2.2.1/css/responsive.bootstrap.min.css" rel="stylesheet" />*@

    @section scripts{
        <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap.min.js"></script>
        <script src="https://cdn.datatables.net/responsive/2.2.1/js/dataTables.responsive.min.js"></script>
        <script src="https://cdn.datatables.net/responsive/2.2.1/js/responsive.bootstrap.min.js"></script>
        <script src="~/Scripts/Project/JS/jsPaciente.js"></script>

        <script>
            table = $('#tabPaci').DataTable();
        </script>
    }
</head>
<body>
    <br />
    <button type="button" class="btn btn-light">
        @Html.ActionLink("Agregar Paciente", "Agregar_Paciente", "Home")
    </button>
    <br /><br />
    <div class="row">
        <table id="tabPaci" class="table table-striped table-bordered dt-responsive nowrap">
            <thead>
                <tr>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Apellido Paterno
                    </th>
                    <th>
                        Apellido Materno
                    </th>
                    <th>
                        Domicilio
                    </th>
                    <th>
                        Teléfono
                    </th>
                    <th>
                        Celular
                    </th>
                    <th>
                        Fecha de Nacimiento
                    </th>
                    <th>
                        Sexo
                    </th>
                    <th></th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.apellido_paterno)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.apellido_materno)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.domicilio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.telefono)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.celular)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.fecha_nacimiento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sexo)
                        </td>
                        <td>
                            <button type="button" class="btn btn-primary form-control ActPaci" data-target="@item.idpaciente">Actualizar</button>
                            <button type="button" class="btn btn-success form-control DetPaci" data-target="@item.idpaciente">Detalles</button>
                            <button type="button" class="btn btn-danger form-control EliPaci" data-target="@item.idpaciente">Eliminar</button>
                        </td>
                    </tr>
                </tbody>
            }
        </table>
    </div>
    <input type="hidden" id="urlPacientes" value="@Url.Action("Pacientes","Home")" />
    <input type="hidden" id="urlDetPaci" value="@Url.Action("DetallesPaciente","Home")"/>
    <input type="hidden" id="urlModiPaci" value="@Url.Action("ModificaPaciente","Home")" />
    <input type="hidden" id="urlEliPaci" value="@Url.Action("EliminaPaciente","Home")" />
</body>
</html>

