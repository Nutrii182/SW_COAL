<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema Dental COAL</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!--Styles-->
    <link href="~/Content/css/Layout.css" rel="stylesheet" />
    @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" />*@
    @*<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />*@
    @*<link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap.min.css" rel="stylesheet" />*@
    @*<link href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.bootstrap.min.css" rel="stylesheet" />*@

    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/Project/JS/jsLogout.js"></script>

</head>
<body>
    <header>
        <nav class="nav bg-dark m-0  fixed-top p-2">
            <a class="nav-link">@Html.ActionLink("Sistema Dental COAL", "Index", "Home")</a>
            <a class="nav-link">@Html.ActionLink("Inicio", "Index", "Home")</a>
            <a class="nav-link">@Html.ActionLink("Pacientes", "Pacientes", "Home")</a>
            <a class="nav-link">@Html.ActionLink("Usuarios", "Usuarios", "Home")</a>
            <a class="nav-link">@Html.ActionLink("Calendario", "Calendario", "Home")</a>

            <button id="btnLogout" class="btn btn-outline-light ml-auto btn-sm">Cerrar Sesión</button>
        </nav>
    </header>

    <div class="container body-content">
        <div class="row">
            <div class="col">
                @RenderBody()
            </div>
        </div>

        <hr />
        <footer>
            <br />
            <p>&copy; @DateTime.Now.Year - Sistema Dental COAL</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <input type="hidden" id="urlLogout" value="@Url.Action("Logout","Login")" />

</body>
</html>